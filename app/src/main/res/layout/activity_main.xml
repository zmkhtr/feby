<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Apa yang kamu makan hari ini?"/>
        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_gravity="end"
            android:text="List : Nasi, Daging, Bubur, Ayam, Jagung, Tempe, Tahu"/>
        <AutoCompleteTextView
            android:id="@+id/makanan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="makanan 1"/>
        <AutoCompleteTextView
            android:id="@+id/makanan2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="makanan 2"/>
        <AutoCompleteTextView
            android:id="@+id/makanan3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="makanan 3"/>
        <Button
            android:id="@+id/hitung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hitung kalori"
            android:layout_gravity="end"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="20dp"/>
    </LinearLayout>

</ScrollView>